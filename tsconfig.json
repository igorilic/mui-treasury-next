{
  "include": ["packages", "types", "scripts", ".storybook/preview.tsx"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"],
  "compilerOptions": {
    "module": "es2020",
    "target": "es2018",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["jest", "node"],
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@mui-treasury/theme-treasury": ["packages/theme-treasury/src/"],
      "@mui-treasury/component-shape": ["packages/component-shape/src/"],
      "@mui-treasury/style-shape-sticker": ["packages/style-shape-sticker/src/"]
    }
  }
}
